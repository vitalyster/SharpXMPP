<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SharpXMPP.Client.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="5">
            <Entry x:Name="_login"
                   Placeholder="Login" />
            <Entry x:Name="_pass"
                   Placeholder="Password" 
                   IsPassword="True"/>
            <Button Text="Login"
                    Clicked="Login_Click" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
